<div class="ui center aligned segment container">
  <h2 class="ui grey inverted  header">
    <i class=" feed icon"></i>
    Songs
  </h2>

  <div class="ui left aligned two column  grid">

    <% (@performance.songs).each do |ps| %>

      <div class="column">
        <div class="ui icon message">
          <i class="music icon"></i>

          <div class="content">
            <div class="header">
              <a href="/songs/<%= ps.id %>">
                <%= ps.title %>
              </a>
            </div>
          </div>


          <form id="delete-performance-song" action="/performances/<%= @performance.id %>/songs/<%= ps.id %>/delete" accept-charset="UTF-8" method="post" onsubmit="return confirm('Delete song from performance?');">
                  <input type="hidden" name="_method" value="delete" />
            <input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden">

            <button  class="ui button grey icon labeled"  type="submit">
              <i class="icon trash"></i>
              Delete
            </button>
          </form>
        </div>
      </div>
    <% end %>
  </div>
</div>
</div>

