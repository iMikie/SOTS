nav {
  /*border: 1px solid rgba(0, 0, 0, .5);*/
  /*display: inline-table;*/
  margin: auto;
  min-width: 573px;
  max-width: 1100px;
  height: 39px;
  background: #efefef;
  background: linear-gradient(top, #efefef 0%, #bbbbbb 100%);
  background: -moz-linear-gradient(top, #efefef 0%, #bbbbbb 100%);
  background: -webkit-linear-gradient(top, #efefef 0%, #bbbbbb 100%);
  text-align: center;
  /*overflow:hidden;*/

}

nav ul {
  /*padding-left: 16em;*/
  list-style: none;
  position: relative;
  top: -14px;
  z-index: 2;
  display: inline-table;
}

nav ul:after {
  content: "";
  clear: both;
  display: block;
}

nav ul li {
  float: left;
}

nav ul li:hover {
  background: #4b545f;
  background: linear-gradient(top, #4f5964 0%, #5f6975 40%);
  background: -moz-linear-gradient(top, #4f5964 0%, #5f6975 40%);
  background: -webkit-linear-gradient(top, #4f5964 0%, #5f6975 40%);
}

nav ul li:hover a {
  color: #fff;
}

nav ul li a {
  display: block;
  padding: 10px 40px;
  color: #757575;
  text-decoration: none;
}

nav ul ul {
  background: #5f6975;
  border-radius: 0;
  padding: 0;
  position: absolute;
  top: 100%;
}

nav ul ul li {
  float: none;
  border-top: 1px solid #6b727c;
  border-bottom: 1px solid #575f6a;
  position: relative;
}

nav ul ul li a {
  padding: 15px 40px;
  color: #fff;
}

nav ul ul li a:hover {
  background: #4b545f;
}

nav ul ul ul {
  position: absolute;
  left: 100%;
  top: 0;
}

