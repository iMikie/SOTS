
/*CSS for login page*/

.login-box {
  width: 200px;
  background-color: #555555;
}

.login_field {
  width: 218px;
  height: 28px;
  background-color: #FFFFFF;
  border: #cdcdcd 1px solid;
  margin-bottom: 4px;
  text-transform: none;
  /*padding-left: 1em;*/
  font: 14px HelveticaNeue, Helvetica, sans-serif;
}

.dbox_title {
  text-transform: uppercase;
  text-align: center;
}

.input_box {
  margin-left: 350px;
  margin-top: 100px;
  padding: 2em;
  padding-bottom: 10px;
  width: 300px;
  height: 200px;
  background-color: #EEEEEE;
  color: #15355a;
  font: bold 14px Arial, Helvetica, sans-serif;
  text-transform: uppercase;
  letter-spacing: 0.06em;
}

.input_box2 {
  margin-left: 350px;
  /*margin-top: 100px;*/
  padding: 2em;
  width: 300px;
  /*height: 250px;*/
  background-color: #EEEEEE;
  color: #15355a;
  font: bold 14px Arial, Helvetica, sans-serif;
  letter-spacing: 0.06em;
}

#error_explanation {
  font: bold 14px Arial, Helvetica, sans-serif;
}

#login-btn-wrap {
  width: 64px;
  height: 30px;
  background-color: blue;
  color: #fff;
}

.small_title {
  margin-top: 2em;
  margin-bottom: 1.2em;
  font-style: italic;
  font-size: 10px;
  color: #BBBBBB;
}

.large_field {
  font: italic 10px HelveticaNeue, Helvetica, sans-serif;
  font-style: normal;
  font-size: 18px;
  margin-top: -0.75em;
  color: #DDDDDD;
}
